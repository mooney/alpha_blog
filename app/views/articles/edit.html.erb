<h1>Edit existing article</h1>

<% if @article.errors.any? %>
<h3>Please resolve these errors before updating your article:</h3>
<ul>
<% @article.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
<% end %>
</ul>
<% end %>

<%= bootstrap_form_for (@article) do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :description %>
  <%= f.submit %>
<% end %>

<%= link_to "View all articles", articles_path %>